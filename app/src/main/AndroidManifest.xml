<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.jiajie.design"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".MyApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.ScreenSlidePagerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/TestTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity android:name=".ui.photopicker.PreviewActivity"/>
        <activity android:name=".preview.PreviewActivity2"/>

        <activity
            android:name=".ui.activity.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme">
        </activity>

        <activity
            android:name=".notification.ResultActivity"
            android:parentActivityName=".notification.NotificationActivity"
            android:theme="@style/TestTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".notification.NotificationActivity"/>
        </activity>

        <meta-data
            android:name="com.jiajie.design.utils.glide.MyGlideModule"
            android:value="GlideModule"/>

    </application>

</manifest>