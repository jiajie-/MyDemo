<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference"/>
        <attr name="metaButtonBarButtonStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SpeedView">
        <attr name="indicatorColor" format="color"/>
        <attr name="centerCircleColor" format="color"/>
        <attr name="markColor" format="color"/>
        <attr name="lowSpeedColor" format="color"/>
        <attr name="mediumSpeedColor" format="color"/>
        <attr name="highSpeedColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="backgroundCircleColor" format="color"/>
        <attr name="speedometerWidth" format="dimension"/>
        <attr name="maxSpeed" format="integer"/>
        <attr name="withTremble" format="boolean"/>
        <attr name="withBackgroundCircle" format="boolean"/>
        <attr name="speedTextSize" format="dimension"/>
        <attr name="unit" format="string"/>
    </declare-styleable>

    <declare-styleable name="FirstSpeedView" parent="SpeedView">
        <attr name="indicatorColor"/>
        <attr name="centerCircleColor"/>
        <attr name="markColor"/>
        <attr name="lowSpeedColor"/>
        <attr name="mediumSpeedColor"/>
        <attr name="highSpeedColor"/>
        <attr name="textColor"/>
        <attr name="backgroundCircleColor"/>
        <attr name="speedometerWidth"/>
        <attr name="maxSpeed"/>
        <attr name="withTremble"/>
        <attr name="withBackgroundCircle"/>
        <attr name="speedTextSize"/>
        <attr name="unit"/>
    </declare-styleable>

    <declare-styleable name="SecondSpeedView" parent="SpeedView">
        <attr name="indicatorColor"/>
        <attr name="centerCircleColor"/>
        <attr name="markColor"/>
        <attr name="lowSpeedColor"/>
        <attr name="mediumSpeedColor"/>
        <attr name="highSpeedColor"/>
        <attr name="textColor"/>
        <attr name="backgroundCircleColor"/>
        <attr name="speedometerWidth"/>
        <attr name="maxSpeed"/>
        <attr name="withTremble"/>
        <attr name="withBackgroundCircle"/>
        <attr name="speedTextSize"/>
        <attr name="unit"/>
        <attr name="speedTextColor" format="color"/>
        <attr name="speedBackgroundColor" format="color"/>
        <attr name="withEffects" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ThirdSpeedView" parent="SecondSpeedView">
        <attr name="indicatorColor"/>
        <attr name="centerCircleColor"/>
        <attr name="markColor"/>
        <attr name="lowSpeedColor"/>
        <attr name="mediumSpeedColor"/>
        <attr name="highSpeedColor"/>
        <attr name="textColor"/>
        <attr name="backgroundCircleColor"/>
        <attr name="speedometerWidth"/>
        <attr name="maxSpeed"/>
        <attr name="withTremble"/>
        <attr name="withBackgroundCircle"/>
        <attr name="speedTextSize"/>
        <attr name="unit"/>
        <attr name="speedTextColor"/>
        <attr name="speedBackgroundColor"/>
        <attr name="withEffects"/>
    </declare-styleable>

    <declare-styleable name="RadarView">
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="maxValue" format="float"/>
    </declare-styleable>

</resources>
