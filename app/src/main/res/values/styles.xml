<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Base application theme. -->
    <style name="TestTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/LightToolbar</item>
    </style>

    <style name="Base.ViewerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="toolbarStyle">@style/DarkToolbar</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Base.AboutTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/LightToolbar</item>
        <item name="android:homeAsUpIndicator" tools:ignore="PrivateResource">
            @drawable/abc_ic_ab_back_mtrl_am_alpha
        </item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="ViewerTheme" parent="Base.ViewerTheme"/>

    <style name="AboutTheme" parent="Base.AboutTheme"/>

    <style name="LightToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/LightToolbarThemeOverlay</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="titleTextColor">@color/textDark</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="LightToolbarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/textDark</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DarkToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/DarkToolbarThemeOverlay</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
    </style>

    <style name="DarkToolbarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--for buttons-->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <!--<item name="colorButtonNormal">@color/colorAccent</item>-->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="dir_popup_anim">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>
